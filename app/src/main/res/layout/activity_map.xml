<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tylerwalker.buyyouadrink.activity.map.MapActivity">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="0dp" />

    <android.support.v7.widget.CardView
        android:id="@+id/wine_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"

        android:layout_marginBottom="32dp"
        android:elevation="@dimen/project_image_elevation"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/beer_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/map">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/wine"

            app:layout_constraintBottom_toBottomOf="@+id/wine_button"
            app:layout_constraintEnd_toStartOf="@+id/wine_button"
            app:layout_constraintStart_toStartOf="@+id/wine_button"
            app:layout_constraintTop_toTopOf="@+id/wine_button"></ImageView>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/beer_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"

        android:layout_marginBottom="32dp"
        android:elevation="@dimen/project_image_elevation"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/map"
        app:layout_constraintEnd_toStartOf="@+id/juice_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/wine_button">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"

            android:src="@drawable/beer"

            app:layout_constraintBottom_toBottomOf="@+id/beer_button"
            app:layout_constraintEnd_toStartOf="@+id/beer_button"
            app:layout_constraintStart_toStartOf="@+id/beer_button"
            app:layout_constraintTop_toTopOf="@+id/beer_button"></ImageView>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/juice_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"

        android:layout_marginBottom="32dp"
        android:elevation="@dimen/project_image_elevation"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/coffee_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/beer_button">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"

            android:src="@drawable/juice"

            app:layout_constraintBottom_toBottomOf="@+id/juice_button"
            app:layout_constraintEnd_toStartOf="@+id/juice_button"
            app:layout_constraintStart_toStartOf="@+id/juice_button"
            app:layout_constraintTop_toTopOf="@+id/juice_button"></ImageView>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/coffee_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"

        android:layout_marginBottom="32dp"
        android:elevation="@dimen/project_image_elevation"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/map"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/juice_button">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"

            android:src="@drawable/coffee"

            app:layout_constraintBottom_toBottomOf="@+id/coffee_button"
            app:layout_constraintEnd_toStartOf="@+id/coffee_button"
            app:layout_constraintStart_toStartOf="@+id/coffee_button"
            app:layout_constraintTop_toTopOf="@+id/coffee_button"></ImageView>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
